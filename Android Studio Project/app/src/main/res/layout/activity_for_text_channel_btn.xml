<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/channel_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channel Name"

        android:inputType="text" />

    <EditText
        android:id="@+id/channel_description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/channel_name_edit_text"
        android:hint="Channel Description"
        android:inputType="text" />

    <Button
        android:id="@+id/create_channel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/channel_description_edit_text"
        android:layout_centerHorizontal="true"
        android:text="Create Channel" />

</RelativeLayout>
