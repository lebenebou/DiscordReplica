<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_above="@+id/identityInput"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="6dp"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textIsSelectable="true" />

    <EditText
        android:id="@+id/identityInput"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_above="@+id/passwordInput"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="6dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="13dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textIsSelectable="true" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_above="@+id/signUpButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edt_background"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="6dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="13dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textIsSelectable="true" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/normal_btn_bg"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgShowHidePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwordInput"
        android:layout_alignBottom="@+id/passwordInput"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_baseline_visibility_24"/>

    <TextView
        android:id="@+id/loginText"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="225dp"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="onLoginTextClick"
        android:text="Already have an account? Login"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="374dp"
        android:layout_height="133dp"
        android:layout_above="@+id/usernameInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserratblack"
        android:text="Join and chat your way into new friendships.\n\nSign up now."
        android:textColor="@color/white"
        android:textSize="25sp" />

</RelativeLayout>