<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <Button
        android:id="@+id/btnJoinChannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join a Channel"
        android:background="@drawable/btn_background"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/baseline_join_inner_24"
        android:layout_marginTop="280dp"/>

    <Button
        android:id="@+id/btnCreateChannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Channel"
        android:paddingLeft="20dp"
        android:background="@drawable/btn_background"
        android:layout_below="@+id/btnJoinChannel"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/baseline_add_24"
        android:textSize="20sp"
        android:drawablePadding="20dp"
        android:onClick="showPopup"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:background="@drawable/btn_background"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnCreateChannel"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>



