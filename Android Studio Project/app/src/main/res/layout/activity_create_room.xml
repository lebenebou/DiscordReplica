<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoom"
    android:background="@drawable/green"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="-9dp">


    <EditText
        android:id="@+id/nameInput"
        android:layout_width="260dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Room name"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explanationText" />

    <Button
        android:id="@+id/createComButton"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/green_btn_bg"
        android:inputType="textMultiLine"
        android:text="Create Room"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInput"
        app:layout_constraintVertical_bias="0.351" />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/grey_btn_bg"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createComButton"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/explanationText"
        android:layout_width="341dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:text="You will receive a code for this room. Friends with the code can join this room to chat."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainText1" />

    <TextView
        android:id="@+id/mainText1"
        android:layout_width="351dp"
        android:layout_height="69dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserratblack"
        android:text="Open a new room in this community."
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>