<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Rectangle shape with rounded corners and grey background -->
    <item>
        <shape android:shape="rectangle" android:id="@+id/outerRect">
            <corners android:radius="0dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="10dp"

                android:topRightRadius="10dp"/>
            <stroke
                android:width="3dp"
                android:color="#fff"
                android:dashWidth="100dp"
                android:dashGap="5dp"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</layer-list>
